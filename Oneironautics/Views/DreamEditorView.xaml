<mah:MetroWindow
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="Oneironautics.Views.DreamEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oneironautics.Views" xmlns:viewmodels="clr-namespace:Oneironautics.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DreamEditorViewModel}"
             mc:Ignorable="d"      
        Width="835"
        Height="525"
        >
    <Grid Grid.IsSharedSizeScope="True" Margin="10,0,10,10" Height="auto" Width="800" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Title, Position, Lucidity and Date-->
        <Grid Grid.Row="0" Margin="0 5 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition Width="200" SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition Width="200" SharedSizeGroup="FirstColumn"/>
                <ColumnDefinition Width="200" SharedSizeGroup="SecondColumn"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Title"
            />

            <TextBox Grid.Row="1"
                     Grid.Column="0"
                     FontSize="16"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
            />

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Text="Position"
                       Margin="10 0 0 0"
                       
            />

            <ComboBox Grid.Row="1"
                      Grid.Column="1"
                      FontSize="16"
                      Margin="10 0 0 0"
                      ItemsSource="{Binding SleepingPositions}"
                      SelectedItem="{Binding SleepingPosition, UpdateSourceTrigger=PropertyChanged}"
            />


            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Text="Lucidity"
                       Margin="10 0 0 0"
                       
            />

            <ComboBox Grid.Row="1"
                      Grid.Column="2"
                      FontSize="16"
                      Margin="10 0 0 0"
                      ItemsSource="{Binding LucidityLevels}"
                      SelectedItem="{Binding LucidityLevel, UpdateSourceTrigger=PropertyChanged}"
                     
            />

            <TextBlock Grid.Row="0"
                       Grid.Column="3"
                       Text="Dream Time"
                       Margin="10 0 0 0"
            />

            <mah:DateTimePicker Grid.Row="1"
                     Grid.Column="3"
                     FontSize="16"
                     Margin="10 0 0 0"
                     SelectedDateTime="{Binding DreamDateTime, UpdateSourceTrigger=PropertyChanged}"
            />

        </Grid>

        <!--Content-->
        <Grid Grid.Row="1" Margin="0 5 0 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Content"
            />

            <TextBox Grid.Row="1" 
                     FontSize="16"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="250"
                     Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                     
            />

        </Grid>

        <!--Signs-->
        <Grid Grid.Row="2" 
              Margin="0 5 0 0"
              Visibility="Collapsed">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Signs"
                       Margin="0 0 0 0"
            />

            <TextBox Grid.Row="1" 
                     FontSize="16"
            />

        </Grid>

        <!--Notes-->
        <Grid Grid.Row="3" Margin="0 5 0 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Notes"
            />

            <TextBox Grid.Row="1" 
                     FontSize="16"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="100"
                     Text="{Binding Notes}"
                     
            />

        </Grid>

        <!--Action buttons-->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Margin="0 10 0 0"
                    FlowDirection="RightToLeft"
                    VerticalAlignment="Bottom"
                    >

            <Button Content="Ok" 
                    Width="100"
                    Command="{Binding SaveDreamAction}" 
                    />

        </StackPanel>

    </Grid>
</mah:MetroWindow>
